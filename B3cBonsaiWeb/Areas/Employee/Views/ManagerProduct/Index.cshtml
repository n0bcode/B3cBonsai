@{
    ViewData["Title"] = "Danh mục sản phẩm";
    Layout = "~/Areas/Employee/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li><h5 class="bc-title">Sản phẩm</h5></li>
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <svg width="17" height="17" viewBox="0 0 17 17" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2.125 6.375L8.5 1.41667L14.875 6.375V14.1667C14.875 14.5424 14.7257 14.9027 14.4601 15.1684C14.1944 15.4341 13.8341 15.5833 13.4583 15.5833H3.54167C3.16594 15.5833 2.80561 15.4341 2.53993 15.1684C2.27426 14.9027 2.125 14.5424 2.125 14.1667V6.375Z" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                        <path d="M6.375 15.5833V8.5H10.625V15.5833" stroke="#2C2C2C" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    Trang chủ
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Quản lý sản phẩm</a></li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive active-projects style-1">
                            <div class="tbl-caption">
                                <h4 class="heading mb-0">Sản phẩm</h4>
                                <div>
                                    <a onclick="loadViewUpsert('')" class="btn btn-primary btn-sm"
                                        data-bs-toggle="offcanvas" href="#upsertObject" role="button"
                                        aria-controls="upsertObject">+ Thêm sản phẩm</a>
                                </div>
                            </div>
                            <div class="table-responsive p-3 datatables">
                                <table id="products-table" class="display table">
                                    <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Tên sản phẩm</th>
                                            <th>Danh mục</th>
                                            <th>Số lượng</th>
                                            <th>Giá</th>
                                            <th>Ngày tạo</th>
                                            <th>Ngày cập nhật</th>
                                            <th>Trạng thái</th>
                                            <th>Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section upsertObject {
    <div class="offcanvas offcanvas-end customeoff" tabindex="-1" id="upsertObject">
    </div>
}


@section detailWithDelete {
    <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="detailWithDelete" aria-hidden="true">
        <div class="modal-dialog modal-dialog-center" style="width: 75%;">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="detailWithDelete">Thông tin sản phẩm</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="contentDWD">
                    <div id="preloader">
                        <div class="lds-ripple">
                            <div></div>
                            <div></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<!-- Modal -->


@section Scripts {
    <script src="~/js/employee/ManagerProduct.js" asp-append-version="true"></script>
}


