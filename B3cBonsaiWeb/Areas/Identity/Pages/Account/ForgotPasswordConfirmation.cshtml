@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Xác nhận khôi phục mật khẩu";
}

@if (HttpContext.Session.GetString(SD.ViewAccess) == SD.CustomerAccess)
{
<!-- breadcrumb start -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-index">
                    <!-- breadcrumb-list start -->
                    <ul class="breadcrumb-ul">
                        <li class="breadcrumb-li">
                            <a class="breadcrumb-link" href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-li">
                            <span class="breadcrumb-text">Khôi phục mật khẩu</span>
                        </li>
                    </ul>
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->
<!-- customer-page start -->
<section class="customer-page section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-md-12 row justify-content-center text-center">
                <!-- section title start -->
                <div class="section-capture">
                    <div class="section-title">
                        <h2><span>@ViewData["Title"]</span></h2>
                    </div>
                </div>
                <!-- section title end -->

                <p>
                    Vui lòng kiểm tra email của bạn để khôi phục mật khẩu.
                </p>
            </div>

        </div>
    </div>
</section>
<!-- customer-page end -->
}
else
{
    Layout = null;
    <partial name="_EmployeeHeaderCSS" />
    <body class="vh-100">
        <div class="authincation h-100">
            <div class="container-fluid h-100">
                <div class="row h-100">
                    <!-- Nội dung thông báo khôi phục mật khẩu -->
                    <div class="col-lg-6 col-md-12 col-sm-12 mx-auto align-self-center">
                        <section class="customer-page section-ptb">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 row justify-content-center text-center">
                                        <!-- section title start -->
                                        <div class="section-capture">
                                            <div class="section-title">
                                                <h2><span>@ViewData["Title"]</span></h2>
                                            </div>
                                        </div>
                                        <!-- section title end -->

                                        <p>
                                            Vui lòng kiểm tra email của bạn để khôi phục mật khẩu.
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                    <!-- Phần giới thiệu hoặc hình ảnh -->
                    <div class="col-xl-6 col-sm-6">
                        <div class="pages-left h-100">
                            <div class="login-content">
                                <a href="/">
                                    <img src="~/customer/img/logo/logo.png" alt="Logo Công Ty" class="logo" height="40">
                                </a>
                                <p>Chúng tôi vừa gửi một email đến địa chỉ của bạn với hướng dẫn để khôi phục mật khẩu. Nếu bạn không nhận được email, hãy kiểm tra thư mục Spam hoặc yêu cầu khôi phục lại.</p>
                            </div>
                            <div class="login-media text-center">
                                <img src="~/employee/images/password-recovery.png" alt="Khôi phục mật khẩu">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_EmployeeFooterJs" />
    </body>

}