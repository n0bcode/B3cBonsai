@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Xác nhận thay đổi email";
}
@if (HttpContext.Session.GetString(SD.ViewAccess) == SD.CustomerAccess)
{
<!-- breadcrumb start -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-index">
                    <!-- breadcrumb-list start -->
                    <ul class="breadcrumb-ul">
                        <li class="breadcrumb-li">
                            <a class="breadcrumb-link" href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-li">
                            <span class="breadcrumb-text">Tài khoản</span>
                        </li>
                        <li class="breadcrumb-li">
                            <span class="breadcrumb-text">@ViewData["Title"]</span>
                        </li>
                    </ul>
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->
<!-- customer-page start -->
<section class="customer-page section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-md-12 row justify-content-center text-center gap-4">
                <!-- section title start -->
                <div class="section-capture">
                    <div class="section-title">
                        <h2><span>@ViewData["Title"]</span></h2>
                    </div>
                </div>
                <!-- section title end -->

                <partial name="_StatusMessage" model="Model.StatusMessage" />

                <div class="confirmation-message">
                    <p>Vui lòng kiểm tra email mới của bạn để xác nhận thay đổi. Làm theo hướng dẫn trong email để hoàn tất quá trình.</p>
                </div>

                <div class="acc-wrapper">
                    <h6>Bạn đã xác nhận chưa?</h6>
                    <div class="account-optional">
                        <a asp-page="./Login">Đăng nhập vào tài khoản của bạn</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- customer-page end -->
}
else
{
    Layout = null;
    <partial name="_EmployeeHeaderCSS" />

    <body class="vh-100">
        <div class="authincation h-100">
            <div class="container-fluid h-100">
                <div class="row h-100">
                    <!-- Nội dung khách hàng -->
                    <div class="col-lg-6 col-md-12 col-sm-12 mx-auto align-self-center">
                        <section class="customer-page section-ptb">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 row justify-content-center text-center gap-4">
                                        <!-- section title start -->
                                        <div class="section-capture">
                                            <div class="section-title">
                                                <h2><span>@ViewData["Title"]</span></h2>
                                            </div>
                                        </div>
                                        <!-- section title end -->

                                        <partial name="_StatusMessage" model="Model.StatusMessage" />

                                        <div class="confirmation-message">
                                            <p>Vui lòng kiểm tra email mới của bạn để xác nhận thay đổi. Làm theo hướng dẫn trong email để hoàn tất quá trình.</p>
                                        </div>

                                        <div class="acc-wrapper">
                                            <h6>Bạn đã xác nhận chưa?</h6>
                                            <div class="account-optional">
                                                <a asp-page="./Login" class="btn btn-primary">Đăng nhập vào tài khoản của bạn</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                    <!-- Phần giới thiệu hoặc hình ảnh -->
                    <div class="col-xl-6 col-sm-6">
                        <div class="pages-left h-100">
                            <div class="login-content">
                                <a href="/">
                                    <img src="~/customer/img/logo/logo.png" alt="Logo Công Ty" class="logo" height="40">
                                </a>
                                <p>Chào mừng bạn đến với cổng thông tin nhân viên. Vui lòng đăng nhập để truy cập tài khoản của bạn và bắt đầu quản lý các công việc của mình.</p>
                            </div>
                            <div class="login-media text-center">
                                <img src="~/employee/images/login.png" alt="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_EmployeeFooterJs" />
    </body>
}
