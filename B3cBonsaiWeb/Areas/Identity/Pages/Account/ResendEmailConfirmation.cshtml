@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại xác nhận email";
}
@if (HttpContext.Session.GetString(SD.ViewAccess) == SD.CustomerAccess)
{
<!-- breadcrumb start -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-index">
                    <!-- breadcrumb-list start -->
                    <ul class="breadcrumb-ul">
                        <li class="breadcrumb-li">
                            <a class="breadcrumb-link" href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-li">
                            <span class="breadcrumb-text">Gửi lại xác nhận email</span>
                        </li>
                    </ul>
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->
<!-- customer-page start -->
<section class="customer-page section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-md-12 row justify-content-center text-center">
                <!-- section title start -->
                <div class="section-capture">
                    <div class="section-title">
                        <h2><span>@ViewData["Title"]</span></h2>
                    </div>
                </div>
                <!-- section title end -->

                <h1>@ViewData["Title"]</h1>
                <h2>Vui lòng nhập email của bạn.</h2>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi lại</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- customer-page end -->
} else {

    Layout = null;
    <partial name="_EmployeeHeaderCSS" />
    <body class="vh-100">
        <div class="authincation h-100">
            <div class="container-fluid h-100">
                <div class="row h-100">
                    <!-- Nội dung gửi lại xác nhận email -->
                    <div class="col-lg-6 col-md-12 col-sm-12 mx-auto align-self-center">
                        <section class="customer-page section-ptb">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 row justify-content-center text-center">
                                        <h1>@ViewData["Title"]</h1>
                                        <h2>Vui lòng nhập email của bạn.</h2>
                                        <hr />
                                        <div class="row">
                                            <div class="col-md-4">
                                                <form method="post">
                                                    <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="name@example.com" />
                                                        <label asp-for="Input.Email" class="form-label"></label>
                                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                    </div>
                                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Gửi lại</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                    <!-- Phần giới thiệu hoặc hình ảnh -->
                    <div class="col-xl-6 col-sm-6">
                        <div class="pages-left h-100">
                            <div class="login-content">
                                <a href="/">
                                    <img src="~/customer/img/logo/logo.png" alt="Logo Công Ty" class="logo" height="40">
                                </a>
                                <p>Chúng tôi sẽ gửi lại một liên kết xác nhận đến email của bạn để bạn có thể kích hoạt tài khoản.</p>
                            </div>
                            <div class="login-media text-center">
                                <img src="~/employee/images/resend-email.png" alt="Gửi lại xác nhận email">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_EmployeeFooterJs" />
    </body>

}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
