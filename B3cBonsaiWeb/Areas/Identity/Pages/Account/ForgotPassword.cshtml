@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu của bạn?";
}

@if (HttpContext.Session.GetString(SD.ViewAccess) == SD.CustomerAccess)
{
<!-- breadcrumb start -->
<section class="breadcrumb-area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-index">
                    <!-- breadcrumb-list start -->
                    <ul class="breadcrumb-ul">
                        <li class="breadcrumb-li">
                            <a class="breadcrumb-link" href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-li">
                            <span class="breadcrumb-text">Khôi phục mật khẩu</span>
                        </li>
                    </ul>
                    <!-- breadcrumb-list end -->
                </div>
            </div>
        </div>
    </div>
</section>
<!-- breadcrumb end -->
<!-- customer-page start -->
<section class="customer-page section-ptb">
    <div class="container">
        <div class="row">
            <div class="col-md-12 row justify-content-center text-center">
                <!-- section title start -->
                <div class="section-capture">
                    <div class="section-title">
                        <h2><span>@ViewData["Title"]</span></h2>
                    </div>
                </div>
                <!-- section title end -->

                <h2>Nhập địa chỉ email của bạn.</h2>
                <hr />

                <div class="row justify-content-center">
                    <div class="col-md-4">
                        <form method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Input.Email" class="form-label"></label>
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary">Khôi phục mật khẩu</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!-- customer-page end -->
}
else
{
    Layout = null;
    <partial name="_EmployeeHeaderCSS" />

    <body class="vh-100">
        <div class="authincation h-100">
            <div class="container-fluid h-100">
                <div class="row h-100">
                    <!-- Nội dung khôi phục mật khẩu -->
                    <div class="col-lg-6 col-md-12 col-sm-12 mx-auto align-self-center">
                        <section class="customer-page section-ptb">
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 row justify-content-center text-center">
                                        <!-- section title start -->
                                        <div class="section-capture">
                                            <div class="section-title">
                                                <h2><span>@ViewData["Title"]</span></h2>
                                            </div>
                                        </div>
                                        <!-- section title end -->

                                        <h2>Nhập địa chỉ email của bạn.</h2>
                                        <hr />

                                        <div class="row justify-content-center">
                                            <div class="col-md-4">
                                                <form method="post">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                                        <label asp-for="Input.Email" class="form-label"></label>
                                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                    </div>
                                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Khôi phục mật khẩu</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>

                    <!-- Phần giới thiệu hoặc hình ảnh -->
                    <div class="col-xl-6 col-sm-6">
                        <div class="pages-left h-100">
                            <div class="login-content">
                                <a href="/">
                                    <img src="~/customer/img/logo/logo.png" alt="Logo Công Ty" class="logo" height="40">
                                </a>
                                <p>Chào mừng bạn đến với cổng hỗ trợ của chúng tôi. Vui lòng nhập email đã đăng ký với chúng tôi để khôi phục mật khẩu của bạn.</p>
                            </div>
                            <div class="login-media text-center">
                                <img src="~/employee/images/password-recovery.png" alt="Khôi phục mật khẩu">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_EmployeeFooterJs" />
    </body>

}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
