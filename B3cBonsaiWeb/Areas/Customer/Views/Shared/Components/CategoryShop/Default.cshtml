@model IEnumerable<SanPham>

@if (Model != null)
{
    <!-- category start -->
    <section class="category-slider section-ptb">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="section-capture">
                        <div class="section-title">
                            <h2>Danh mục cửa hàng</h2>
                        </div>
                    </div>
                    <div class="cat-slider owl-carousel owl-theme" id="category-slider">
                        @foreach (var sanPham in Model)
                        {
                            <div class="item">
                                <div class="category-wrap banner-hover">
                                    <a asp-area="Customer" asp-controller="ClientProduct" asp-action="Detail" asp-route-id="@sanPham.Id" class="cat-img-title banner-img">
                                        <div class="cat-img">
                                            <!-- Hình ảnh đầu tiên -->
                                            <img onerror="this.src='/images/product/default.jpg'"
                                                 src="@(sanPham.HinhAnhs?.FirstOrDefault()?.LinkAnh ?? @Url.Content("~/images/product/default.jpg"))"
                                                 class="img-fluid img1 mobile-img1"
                                                 alt="p1"
                                                 id="image1"
                                                 style="width: 315px; height: 355px; border-radius: 5px; object-fit: cover; transition: opacity 0.5s ease-in-out; opacity: 1;"
                                                 onmouseover="this.src='@(sanPham.HinhAnhs?.Skip(1).FirstOrDefault()?.LinkAnh ?? @Url.Content("~/images/product/default.jpg"))'"
                                                 onmouseout="this.src='@(sanPham.HinhAnhs?.FirstOrDefault()?.LinkAnh ?? @Url.Content("~/images/product/default.jpg"))'">
                                        </div>

                                        <div class="cat-content-info">
                                            <div class="cat-content">
                                                <h6><span class="cat-title">@sanPham.TenSanPham</span></h6>
                                                <span class="cat-count">Kho: @sanPham.SoLuong</span>
                                            </div>
                                            <div class="category-button">
                                                <span class="button-block"><i class="feather-plus"></i></span>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- category end -->
}
